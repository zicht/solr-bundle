{
    "name": "zicht/solr-bundle",
    "description": "Solr utilities for Symfony",
    "type": "symfony-bundle",
    "repositories": [],
    "authors": [
        {
            "name": "Zicht online",
            "email": "info@zicht.nl"
        }
    ],
    "require": {
        "php": ">=7.1",
        "doctrine/doctrine-bundle": "^1",
        "doctrine/orm": "^2.6",
        "psr/http-client": "^1",
        "psr/http-message": "^1",
        "symfony/symfony": "~3.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^4",
        "zicht/standards-php": "^3"
    },
    "autoload": {
        "psr-0": {
            "": [
                "src/"
            ]
        },
        "exclude-from-classmap": [
            "/tests/"
        ]
    },
    "minimum-stability": "stable",
    "license": "MIT",
    "scripts": {
        "cs-auto": "./vendor/bin/phpcs -s src/Zicht/ --standard=./vendor/zicht/standards-php/Zicht/ --extensions=php --report=diff | patch -p0 -ui -",
        "cs": "./vendor/bin/phpcs -s src/Zicht/ --standard=./vendor/zicht/standards-php/Zicht/ --extensions=php"
    }
}
