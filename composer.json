{
    "name": "zicht/solr-bundle",
    "type": "symfony-bundle",
    "description": "Solr utilities for Symfony",
    "license": "MIT",
    "authors": [
        {
            "name": "Zicht online",
            "email": "info@zicht.nl"
        }
    ],
    "require": {
        "php": "^7.4 || ^8",
        "doctrine/common": "^2.2 || ^3",
        "doctrine/orm": "^2.13",
        "guzzlehttp/guzzle": "^6.3",
        "sonata-project/admin-bundle": "^3.74",
        "symfony/console": "^4.4",
        "symfony/framework-bundle": "^4.4",
        "zicht/framework-extra-bundle": "^9",
        "zicht/url-bundle": "^5"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3",
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^5"
    },
    "autoload": {
        "psr-4": {
            "Zicht\\Bundle\\SolrBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Zicht\\Bundle\\SolrBundle\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "analysis": "psalm",
        "lint": "PHP_CS_FIXER_IGNORE_ENV=1 php-cs-fixer fix --dry-run --diff -vvv",
        "lint-fix": "php-cs-fixer fix",
        "test": "phpunit"
    }
}
