<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="zicht_solr.http.client_observer" class="Zicht\Bundle\SolrBundle\Http\ObserverBridge" public="false">
            <argument type="service" id="event_dispatcher"/>
        </service>

        <service id="zicht_solr.http.handler.socket" class="Zicht\Http\Handler\SocketHandler" public="false">
            <argument/>
            <argument type="collection"/>
        </service>

        <service id="zicht_solr.http.client" class="Zicht\Http\Client" public="false">
            <argument type="service" id="zicht_solr.http.handler.socket" />
            <call method="attachObserver">
                <argument type="service" id="zicht_solr.http.client_observer"/>
            </call>
        </service>

    </services>
</container>