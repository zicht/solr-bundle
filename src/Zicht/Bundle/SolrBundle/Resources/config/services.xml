<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- "zicht_solr.manager" service will be created in \Zicht\Bundle\SolrBundle\DependencyInjection\ZichtSolrExtension from
             either the zicht_solr.manager.default_manager or zicht_solr.manager.entity_manager definition -->
        <service id="zicht_solr.manager.default_manager" class="Zicht\Bundle\SolrBundle\Manager\SolrManager">
            <argument type="service" id="zicht_solr.solr"/>
        </service>
        <service id="zicht_solr.manager.entity_manager" class="Zicht\Bundle\SolrBundle\Manager\SolrEntityManager" parent="zicht_solr.manager.default_manager" />

        <service id="zicht_solr.manager.index_status_manager" class="Zicht\Bundle\SolrBundle\Manager\IndexStatusManager">
            <argument>%solr_core%</argument>
            <argument>%kernel.cache_dir%/zicht/solr</argument>
            <argument>%kernel.debug%</argument>
        </service>

        <service id="zicht_solr.stop_word_manager" class="Zicht\Bundle\SolrBundle\Manager\StopWordManager">
            <argument type="service" id="zicht_solr.solr"/>
        </service>

        <service id="zicht_solr.synonym_manager" class="Zicht\Bundle\SolrBundle\Manager\SynonymManager">
            <argument type="service" id="zicht_solr.solr"/>
        </service>

        <service id="zicht_solr.doctrine.subscriber" class="Zicht\Bundle\SolrBundle\Manager\Doctrine\Subscriber">
            <argument type="service" id="service_container"/>
            <tag name="doctrine.event_subscriber" />
        </service>

        <service id="zicht_bundle_solr.manager_doctrine.synonym_subscriber" class="Zicht\Bundle\SolrBundle\Manager\Doctrine\SynonymSubscriber">
            <argument type="service" id="zicht_solr.synonym_manager"/>
            <tag name="doctrine.event_subscriber" />
        </service>

        <service id="zicht_bundle_solr.manager_doctrine.stop_word_subscriber" class="Zicht\Bundle\SolrBundle\Manager\Doctrine\StopWordSubscriber">
            <argument type="service" id="zicht_solr.stop_word_manager"/>
            <tag name="doctrine.event_subscriber" />
        </service>

        <service id="zicht_solr.solr" class="Zicht\Bundle\SolrBundle\Solr\Client">
            <argument type="service" id="_zicht_solr.http_client" />
            <argument>%zicht_solr.absolute_base_url%</argument>
            <argument>%solr_core%</argument>
        </service>

        <service id="_zicht_solr.http_client" public="false" class="GuzzleHttp\Client" />

        <service id="_zicht_solr.data_collector" class="Zicht\Bundle\SolrBundle\DataCollector\SolrDataCollector" public="false">
            <tag name="data_collector" template="@ZichtSolr/DataCollector/data_collector.html.twig" id="zicht_solr.data_collector" />
            <argument type="service" id="zicht_solr.solr" />
        </service>
    </services>
</container>